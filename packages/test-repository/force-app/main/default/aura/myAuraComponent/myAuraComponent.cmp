<aura:component>
    <aura:attribute name="title" type="String" default="Hello, Aura!" />
    <div class="my-component">
        <h1 class="header">Welcome to My Aura Component</h1>
        <p class="description">This component demonstrates usage of SLDS styles.</p>
        <button class="slds-button slds-button_brand">Click Me</button> <!-- This should trigger the Stylelint rule -->

        <h3 class="slds-text-heading--regular slds-m-left_x-small allCaps inlineBlock filterLabel">{!v.facetLabel}</h3>
        
    </div>
</aura:component>