{
  "root": true,
  "overrides": [
    {
      "files": ["*.html", "*.cmp"],
      "parser": "@html-eslint/parser",
      "plugins": ["slds"],
      "rules": {
        "slds/no-bem-class": ["error"],
        "slds/no-deprecated-slds-classes": ["error"]
      }
    },
    {
      "files": ["*.js", "*.json"],
      "excludedFiles": "*.js",
      "rules": {
        // No custom rule applied for .js files
        "slds/no-bem-class": ["error"],
        "slds/no-deprecated-slds-classes": ["error"]
      }
    }
  ]
}