{
    "name": "@salesforce-ux/sds-linter",
    "version": "0.0.1-test",
    "description": "SDS Linter with both stylelint and eslint together",
    "main": "index.mjs",
    "workspaces": [
        "packages/*"
    ],
    "files": [
        "build/",
        "README.md"
    ],
    "scripts": {
        "build": "rollup --config rollup.config.js",
        "clean": "rm -rf build node_modules package-lock.json",
        "setup-lint": "node ./build/setup.js"
    },
    "type": "module",
    "dependencies": {
        "@salesforce-ux/stylelint-sds": "latest",
        "@salesforcedevs/eslint-plugin-sf-sds": "^0.0.1-alpha1"
    },
    "keywords": [
        "eslint",
        "stylelint",
        "salesforce",
        "sds"
    ],
    "author": "Kishore Nemalipuri",
    "license": "MIT"
}
